<div class="min-h-screen bg-gradient-to-br from-[#FFF8F0] via-[#FFE5D9] to-[#FFC857] flex items-center justify-center px-4 py-12">
  <div class="max-w-md w-full bg-gradient-to-br from-[#FFF8F0] to-[#FFE5D9] rounded-3xl p-8 shadow-2xl border-2 border-[#FF6B35]/20">
    <!-- Logo -->
    <div class="flex justify-center mb-6">
      <div class="w-16 h-16 bg-[#FF6B35] rounded-2xl flex items-center justify-center shadow-lg shadow-[#FF6B35]/30">
        <svg class="w-9 h-9 text-[#FFF8F0]" fill="currentColor" viewBox="0 0 24 24">
          <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
        </svg>
      </div>
    </div>

    <h2 class="text-3xl font-bold text-center text-[#2C1810] mb-2 font-display">Создать аккаунт</h2>
    <p class="text-center text-[#6B4226] mb-8">Начните звонить в Россию за 60 секунд</p>

    <% if flash[:alert] %>
      <div class="mb-6 p-4 bg-red-100 border border-red-300 text-red-700 rounded-2xl">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with model: @user, url: registration_path, method: :post, class: "space-y-5" do |form| %>
      <div>
        <%= form.label :email_address, "Email", class: "block text-sm font-bold text-[#2C1810] mb-2" %>
        <%= form.email_field :email_address,
            required: true,
            autofocus: true,
            autocomplete: "email",
            placeholder: "your@email.com",
            class: "w-full px-4 py-3 rounded-xl border-2 border-[#FF6B35]/20 focus:border-[#FF6B35] focus:ring-2 focus:ring-[#FF6B35]/20 outline-none transition bg-white text-[#2C1810] placeholder-[#6B4226]/50" %>
      </div>

      <div>
        <%= form.label :password, "Пароль", class: "block text-sm font-bold text-[#2C1810] mb-2" %>
        <%= form.password_field :password,
            required: true,
            autocomplete: "new-password",
            placeholder: "Минимум 8 символов",
            minlength: 8,
            maxlength: 72,
            class: "w-full px-4 py-3 rounded-xl border-2 border-[#FF6B35]/20 focus:border-[#FF6B35] focus:ring-2 focus:ring-[#FF6B35]/20 outline-none transition bg-white text-[#2C1810] placeholder-[#6B4226]/50" %>
        <p class="mt-1 text-xs text-[#6B4226]">Используйте минимум 8 символов</p>
      </div>

      <div>
        <%= form.label :password_confirmation, "Подтвердите пароль", class: "block text-sm font-bold text-[#2C1810] mb-2" %>
        <%= form.password_field :password_confirmation,
            required: true,
            autocomplete: "new-password",
            placeholder: "Повторите пароль",
            minlength: 8,
            maxlength: 72,
            class: "w-full px-4 py-3 rounded-xl border-2 border-[#FF6B35]/20 focus:border-[#FF6B35] focus:ring-2 focus:ring-[#FF6B35]/20 outline-none transition bg-white text-[#2C1810] placeholder-[#6B4226]/50" %>
      </div>

      <div class="flex items-start">
        <input type="checkbox" required class="mt-1 w-4 h-4 rounded border-[#FF6B35]/30 text-[#FF6B35] focus:ring-[#FF6B35]">
        <span class="ml-2 text-sm text-[#6B4226]">
          Я согласен с
          <a href="#" class="text-[#FF6B35] hover:text-[#E63946] font-medium">условиями использования</a>
          и
          <a href="#" class="text-[#FF6B35] hover:text-[#E63946] font-medium">политикой конфиденциальности</a>
        </span>
      </div>

      <%= form.submit "Создать аккаунт", class: "w-full bg-gradient-to-r from-[#FF6B35] to-[#E63946] text-white font-bold py-4 rounded-xl hover:shadow-xl hover:shadow-[#FF6B35]/50 transition cursor-pointer" %>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-[#6B4226]">
        Уже есть аккаунт?
        <%= link_to "Войти", new_session_path, class: "text-[#FF6B35] hover:text-[#E63946] font-bold transition" %>
      </p>
    </div>

    <div class="mt-8 pt-6 border-t border-[#FF6B35]/10">
      <div class="flex items-center gap-2 justify-center text-[#6B4226] text-sm">
        <svg class="w-5 h-5 text-[#FF6B35]" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
        </svg>
        <span class="font-semibold">5 минут бесплатно для теста</span>
      </div>
    </div>

    <div class="mt-6 text-center">
      <%= link_to root_path, class: "text-[#6B4226] hover:text-[#FF6B35] transition inline-flex items-center gap-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Вернуться на главную
      <% end %>
    </div>
  </div>
</div>
